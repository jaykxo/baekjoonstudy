import sys
input = sys.stdin.readline

T = int(input())
for _ in range(T):
    N = int(input())
    applicants = [tuple(map(int, input().split())) for _ in range(N)]

    # 서류 성적 기준 오름차순 정렬
    applicants.sort()

    count = 1
    best_interview = applicants[0][1]  # 첫 번째 지원자는 무조건 선발

    for i in range(1, N):
        if applicants[i][1] < best_interview:
            count += 1
            best_interview = applicants[i][1]

    print(count)
